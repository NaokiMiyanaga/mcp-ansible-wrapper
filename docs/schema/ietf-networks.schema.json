{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/ietf/ietf-networks.schema.json",
  "title": "IETF Networks (RFC8345-like) minimal schema",
  "type": "object",
  "properties": {
    "ietf-network:networks": {
      "type": "object",
      "properties": {
        "network": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "network-id": { "type": "string" },
              "node": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "node-id": { "type": "string" },
                    "ietf-network-topology:termination-point": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "tp-id": { "type": "string" }
                        },
                        "required": ["tp-id"],
                        "additionalProperties": true
                      }
                    }
                  },
                  "required": ["node-id"],
                  "additionalProperties": true
                }
              }
            },
            "required": ["network-id"],
            "additionalProperties": true
          }
        },
        "operational": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["network"],
      "additionalProperties": true
    }
  },
  "required": ["ietf-network:networks"],
  "additionalProperties": true
}

