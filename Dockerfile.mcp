FROM python:3.11-slim

WORKDIR /app/ansible-mcp
# COPY . /app
# RUN pip install --no-cache-dir -r /app/ansible-mcp/requirements.txt
RUN pip install --no-cache-dir fastapi uvicorn[standard] ansible docker PyYAML jsonschema openai httpx

RUN ansible-galaxy collection install community.docker

ENV LOG_DIR=/app/ansible-mcp/logs
RUN mkdir -p $LOG_DIR

# Install docker CLI via Docker official apt repo (CLI only; no daemon)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates curl gnupg lsb-release iproute2 \
 && install -m 0755 -d /etc/apt/keyrings \
 && curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg \
 && chmod a+r /etc/apt/keyrings/docker.gpg \
 && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/debian $(. /etc/os-release; echo $VERSION_CODENAME) stable" > /etc/apt/sources.list.d/docker.list \
 && apt-get update \
 && apt-get install -y --no-install-recommends docker-ce-cli \
 && rm -rf /var/lib/apt/lists/*

EXPOSE 9000

# IMPORTANT: single CMD only. Do NOT append shell commands after this.
CMD ["uvicorn","mcp_http:app","--host","0.0.0.0","--port","9000","--access-log","--log-level","info"]
